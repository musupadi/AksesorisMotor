<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.destiny.motoraksesoris">

    <application
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        android:allowBackup="true"
        android:icon="@drawable/legendaryriders"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name=".Activity.TentangActivity"
            android:parentActivityName=".Activity.HomeActivity"></activity>
        <activity android:name=".Activity.AkunActivity"
            android:parentActivityName=".Activity.HomeActivity"/>
        <activity
            android:name=".Activity.BarangActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:parentActivityName=".Activity.TokoActivity"/>
        <activity
            android:name=".Activity.TokoActivity"
            android:parentActivityName=".Activity.HomeActivity" />
        <activity android:name=".Activity.HomeActivity" />
        <activity
            android:name=".Activity.RegisterActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".Activity.LoginActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".Activity.MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>